        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins"
            card_view:cardCornerRadius="@dimen/cardCornerRadius">


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5A772ED"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:text="@string/question7"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/forQuestions" />

                <RadioButton
                    android:id="@+id/question7_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/question7_option1"
                    android:textSize="@dimen/forOptions" />

                <RadioButton
                    android:id="@+id/question7_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/question7_option2"
                    android:textSize="@dimen/forOptions" />

                <RadioButton
                    android:id="@+id/question7_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/question7_option3"
                    android:textSize="@dimen/forOptions" />

                <RadioButton
                    android:id="@+id/question7_option4"
                    android:layout_width="wrap_content"
